<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>WebRTC</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
    <script src="js/app.js" type="module"></script>
</head>
<body>
    <video id="myVideoArea" autoplay muted></video>
    <video id="otherVideoArea" autoplay></video>
    <section id="connect-section">
        <form>
            <label for="name">Your Name</label><br/>
            <input id="name" type="text"/><br/><br/>

            <label for="recipient">Your friend's name</label><br/>
            <input id="recipient" type="text"/><br/><br/>
            
            <button id="connect">Connect</button>
        </form>
    </section>
    <section id="chat-section" class="display-none">
        <form>
            <label for="message">Message</label><br/>
            <input id="message" type="text" style="height: 20px; width: 300px;"/><br/>
            <input id="sendMessage" type="submit"/>
        </form>
        <div id="chatArea">Message Output:<br/></div>
    </section>
</body>
</html>